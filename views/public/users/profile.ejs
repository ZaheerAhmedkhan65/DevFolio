<!-- Scripts -->
<script>
    const menuBtn = document.getElementById("menuBtn");
    const dropdownMenu = document.getElementById("dropdownMenu");

    if(menuBtn && dropdownMenu){
        menuBtn.addEventListener("click", (e) => {
            e.stopPropagation();
            dropdownMenu.classList.toggle("hidden");
        });
        // Close dropdown when clicking outside
        document.addEventListener("click", () => {
            dropdownMenu.classList.add("hidden");
        });
    }
</script>

 <script>
        // Simple JavaScript to toggle between draft and published posts
        function togglePosts(type) {
            // Hide all post sections
            document.getElementById('draft-posts').classList.add('hidden');
            document.getElementById('published-posts').classList.add('hidden');
            
            // Remove active state from all buttons
            document.getElementById('draft-btn').classList.remove('bg-blue-600', 'text-white');
            document.getElementById('draft-btn').classList.add('bg-gray-200', 'text-gray-700');
            document.getElementById('published-btn').classList.remove('bg-blue-600', 'text-white');
            document.getElementById('published-btn').classList.add('bg-gray-200', 'text-gray-700');
            
            // Show selected section and update button state
            if (type === 'draft') {
                document.getElementById('draft-posts').classList.remove('hidden');
                document.getElementById('draft-btn').classList.remove('bg-gray-200', 'text-gray-700');
                document.getElementById('draft-btn').classList.add('bg-blue-600', 'text-white');
            } else {
                document.getElementById('published-posts').classList.remove('hidden');
                document.getElementById('published-btn').classList.remove('bg-gray-200', 'text-gray-700');
                document.getElementById('published-btn').classList.add('bg-blue-600', 'text-white');
            }
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            togglePosts('draft'); // Show draft posts by default
        });
    </script>