<div class="container mx-auto py-10">
    <h1 class="text-3xl font-semibold mb-6">Latest Posts</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% posts.forEach(post => { %>
            <div class="border rounded-lg overflow-hidden shadow bg-white">
                <% if (post.featured_image_url) { %>
                    <img src="<%= post.featured_image_url %>" class="w-full h-48 object-cover">
                <% } %>

                <div class="p-4">
                    <a href="/posts/slug/<%= post.slug %>" class="text-xl font-bold hover:text-blue-600">
                        <%= post.title %>
                    </a>
                    <p class="text-gray-500 text-sm mt-2"><%= post.excerpt %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
