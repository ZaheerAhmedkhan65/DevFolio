                                        <label for="project_image" class="cursor-pointer">
                                            <div class="bg-blue-600 text-white px-4 py-3 rounded-xl hover:bg-blue-700 transition-colors inline-flex items-center space-x-2">
                                                <i class="fas fa-upload"></i>
                                                <span>Upload Image</span>
                                            </div>
                                        </label>
                                        <input 
                                            type="file" 
                                            id="project_image" 
                                            name="project_image"
                                            accept="image/*" 
                                            class="hidden"
                                            onchange="previewImage(this)"
